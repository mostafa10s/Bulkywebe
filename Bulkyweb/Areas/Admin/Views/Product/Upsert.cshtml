
@model Product


<form method="post" enctype="multipart/form-data">
    <input  asp-for="Id" class="form-control" hidden/>
        <input  asp-for="ImageUrl" class="form-control" hidden/>
    <div class="row"> 
        <div class="col-10">
             <div class="border p-3 mt-4">
        <div class="row pg-2"> 
            <h2 class="text-primary">
              Product
         <hr/>
        </h2>  
        </div>

        <div class="mb-3 p-1">
            <label asp-for="Titel">  </label>
            <input  asp-for="Titel" class="form-control"/>
            <span asp-validation-for="Titel"  class="text-danger" ></span>
        </div>
            <div class="mb-3 p-0">
            <label asp-for="Description"> </label>
            <textarea  asp-for="Description" class="m-2 text-muted"></textarea>
                 <span asp-validation-for="Description" class="text-danger" ></span>
        </div> 
      
            <div class="mb-3 p-0">
            <label asp-for="ISBN"> </label>
            <input  asp-for="ISBN" class="form-control"/>
                 <span asp-validation-for="ISBN" class="text-danger" ></span>
        </div>
        
            <div class="mb-3 p-0">
            <label asp-for="Listprice"> </label>
            <input  asp-for="Listprice" class="form-control"/>
                 <span asp-validation-for="Listprice" class="text-danger" ></span>
        </div>
        <div class="mb-3 p-0">
            <label asp-for="Auther"> </label>
            <input  asp-for="Auther" class="form-control"/>
                 <span asp-validation-for="Auther" class="text-danger" ></span>
        </div>

     
            <div class="mb-3 p-0">
            <label asp-for="price"> </label>
            <input  asp-for="price" class="form-control"/>
                 <span asp-validation-for="price" class="text-danger" ></span>
        </div>
       
            <div class="mb-3 p-0">
            <label asp-for="price50"> </label>
            <input  asp-for="price50" class="form-control"/>
                 <span asp-validation-for="price50" class="text-danger" ></span>
        </div>
         
            <div class="mb-3 p-0">
            <label asp-for="price100"> </label>
            <input  asp-for="price100" class="form-control"/>
                 <span asp-validation-for="price100" class="text-danger" ></span>
        </div>
         <div class="mb-3 p-0">
            <label asp-for="ImageUrl"> </label>
            <input type="file" name="file"  asp-for="ImageUrl" class="form-control border-0"/>
                 <span asp-validation-for="ImageUrl" class="text-danger" ></span>
        </div>
          <div class="mb-3 p-0">
            <label asp-for="CategoryId" > </label>
            <select  asp-for="CategoryId" asp-items="@(ViewData["Category"] as IEnumerable<SelectListItem>)" class="form-select">
                <option disabled selected > --Selected Category-- </option>
            </select>
                
        </div>
        
    </div>
        </div>
        <div class="col-2" >
            <img src="/@Model.ImageUrl" width="100%" style="border-radius:5px; border:1px solid #bbb9b9"/>
        </div>
    </div>
   
 
    
    @if(  Model.Id != 0  )
    {
        
    <button  type="submit" class="btn btn-primary"style="width:150px">Update</button>

    }
    else{
         <button  type="submit" class="btn btn-primary"style="width:150px">Create</button>
    }
    

   

       <a asp-controller="Product" asp-action="Index" class="btn btn-primary text-end" >Back to list </a>
       <div asp-validation-summary="All" class="text-danger"></div>
</form>
@section Scripts{
    <script>
    tinymce.init({
      selector: 'textarea',
      plugins: 'anchor autolink charmap codesample emoticons image link lists  searchreplace table  wordcount checklist mediaembed casechange export formatpainter pageembed linkchecker a11ychecker tinymcespellchecker permanentpen powerpaste advtable advcode editimage tinycomments tableofcontents footnotes',
      toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough |  image  table mergetags | addcomment showcomments | spellcheckdialog a11ycheck typography | align lineheight | checklist numlist bullist indent outdent | emoticons charmap ',
     
    });
  </script>
@{
    <partial name="_ValidationScriptsPartial" />
};
}
