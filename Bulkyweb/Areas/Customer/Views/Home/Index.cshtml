@model  IEnumerable<Product>
<div class="row pd-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-sm-1">
            <div  class="row pd-2" >
                <div  class="col-12 p-1" >
                    <div class="card border-0 p-3 shadow border-top border-5 rounded"> 
                        <img src="@product.ImageUrl"  class="crad-img-top rounded"/> 
                        <div class="card-body pd-0">
                            <div class="pl-1">
                               <p class="card-title h5 text-dark opacity-75 text-uppercase text-center ">@product.Titel   </p>
                               <p class="card-title text-warning text-center "> by <b>@product.Auther</b> </p>
                            </div>  
                             <div class="pl-1">
                                  <p class="card-title text-dark text-opacity-75  text-center mb-1 ">
                                   List Price:
                                     <span class="text-decoration-line-through"> 
                                       
                                       @product.Listprice.ToString("c") 
                                       
                                     </span>  
                                 </p>
                              
                            </div>    
                             <div class="pl-1">
                               <p class="card-title text-dark text-opacity-75  text-center ">
                                  As low As:
                                   <span> 
                                      
                                       @product.price100.ToString("c") 
                                   
                                    </span>  
                               
                                </p>
                              
                            </div>    
                            <div class="card-body pd-0">

                                <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary bg-gradient border-0 form-control">
                                    Details
                                </a>


                             </div>
                        </div>
                    </div>
                 </div>
            </div>
        </div>


    }


</div>